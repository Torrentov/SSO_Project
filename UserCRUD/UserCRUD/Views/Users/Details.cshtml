@model UserCRUD.Models.UserRoot

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.email)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.name)
        </dd>
        <dt class = "col-sm-2">
            Age
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.age)
        </dd>
        @{
            foreach(var claim in Model.claims)
            {
                <dt class = "col-sm-2">
                    @claim.type
                </dt>
                <dd class = "col-sm-10">
                    @claim.value
                </dd>
            }
        }
        <dt class = "col-sm-2">
            Roles
        </dt>
        <dd class = "col-sm-10">
            @{
                string role = "";
                bool first = true;
                foreach(var userRole in Model.roles)
                {
                    if (first)
                    {
                        role += userRole;
                        first = false;
                    } else
                    {
                        role += ", " + userRole;
                    }
                }
            }
            @role
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.user.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
