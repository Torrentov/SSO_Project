@model UserCRUD.Models.UserRoot

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.email)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.name)
        </dd>
        <dt class = "col-sm-2">
            Age
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.age)
        </dd>
        @{
            foreach(var claim in Model.claims)
            {
                <dt class = "col-sm-2">
                    @claim.type
                </dt>
                <dd class = "col-sm-10">
                    @claim.value
                </dd>
            }
        }
        <dt class = "col-sm-2">
            Roles
        </dt>
        <dd class = "col-sm-10">
            @{
                string role = "";
                bool first = true;
                foreach(var userRole in Model.roles)
                {
                    if (first)
                    {
                        role += userRole;
                        first = false;
                    } else
                    {
                        role += ", " + userRole;
                    }
                }
            }
            @role
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
