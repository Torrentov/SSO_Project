@model UserCRUD.Models.ClientsRoot

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Client Id
            </th>
            <th>
                Client secret
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.clients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.clientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clientSecret)
            </td>
            <td>
                <a asp-action="Delete" asp-route-clientId="@item.clientId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
